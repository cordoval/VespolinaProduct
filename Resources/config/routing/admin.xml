<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="vespolina_product_new" pattern="/new">
        <default key="_controller">VespolinaProductBundle:Product:new</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="vespolina_product_create" pattern="/create">
        <default key="_controller">VespolinaProductBundle:Product:create</default>
        <requirement key="_method">POST</requirement>
    </route>
    <route id="vespolina_product_admin" pattern="/">
        <default key="_controller">VespolinaProductBundle:Product:list</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="vespolina_product_list" pattern="/">
        <default key="_controller">VespolinaProductBundle:Product:list</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="vespolina_product_show" pattern="/{id}">
        <default key="_controller">VespolinaProductBundle:Product:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="vespolina_product_edit" pattern="/{id}/edit">
        <default key="_controller">VespolinaProductBundle:Product:edit</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    <route id="vespolina_product_delete" pattern="/{id}/delete">
        <default key="_controller">VespolinaProductBundle:Product:delete</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>